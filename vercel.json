{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" // This is where Vite outputs the build files
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js" // This routes API requests to your JSON server
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
